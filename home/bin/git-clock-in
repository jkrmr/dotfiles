#!/usr/bin/env bash

# git clock-in
#
# Usage:
#   git cli SUBJECT
#
# Create an empty commit with the given subject line

set -e

usage() {
    cat "$0" |
        head -"$((LINENO - 4))" |
        grep '^#' |
        tail -n +2 |
        cut -c 3-
}

if [[ -z "$*" ]]; then
    usage
    exit 1
fi

SUBJECT="$*"

git commit --allow-empty --message "${SUBJECT}"
