#!/usr/bin/env ruby

# frozen_string_literal: true

require "json"
require "net/http"
require "uri"

COINS = <<~STR.chomp.downcase.split
  Bitcoin
  Ethereum
  Chainlink
  Aave
  Uniswap
  Havven
  0x
STR

def api_url(coin_list)
  base_url = "https://api.coingecko.com/api/v3"
  endpoint = "/simple/price"
  data = {
    vs_currencies: "usd",
    ids: coin_list.join(","),
  }
  query = data.map { |k,v| [k, v].join("=") }.join("&")
  [base_url, endpoint, "?", query].join
end

def print_formatted(prices)
  max_length = COINS.max_by(&:length).length

  formatted_prices =
    COINS
    .map { |coin| prices.fetch(coin) }
    .map { |price| sprintf("%.2f", price) }
    .map { |price| price.reverse.scan(/(\d*\.\d{1,3}|\d{1,3})/).join(",").reverse }

  puts \
    COINS
    .zip(formatted_prices)
    .map { |coin, price| [coin.rjust(max_length), price].join(": $") }
end

current_prices =
  JSON
  .parse(Net::HTTP.get URI(api_url(COINS)))
  .map { |coin_id, fiats| [coin_id, fiats["usd"]] }
  .to_h
  .tap { |prices| print_formatted(prices) }

IO.popen("pbcopy", "w") do |file|
  file.puts \
    COINS
    .map { |coin| current_prices.fetch(coin) }
    .join("\n")
end
