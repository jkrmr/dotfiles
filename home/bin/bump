#!/usr/bin/env bash

set -x

# Update Dotfiles
# ---------------------
(cd ~/.dotfiles && git pull --rebase --autostash)
(cd ~/.dotfiles && git submodule foreach 'git pull origin')

# Update Emacs config
# ---------------------
rm -f ~/.emacs.d/elpa/28.0/develop/window-purpose-*/*.elc
(cd ~/.emacs.d && git pull origin develop --rebase --autostash)

# Update Vim packages
# ---------------------
nvim +PlugInstall +PlugUpgrade +PlugUpdate +qall

# Update Homebrew packages
# --------------------------
brew update
brew upgrade
brew cleanup
